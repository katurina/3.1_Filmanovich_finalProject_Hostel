<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>controller</servlet-name>
        <servlet-class>by.epam.project.hostel.controller.Controller</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>controller</servlet-name>
        <url-pattern>/controller</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminEntry</servlet-name>
        <jsp-file>/WEB-INF/admin/admin_entry.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminEntry</servlet-name>
        <url-pattern>/admin/admin_entry</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserAccount</servlet-name>
        <jsp-file>/WEB-INF/account.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserAccount</servlet-name>
        <url-pattern>/account</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminGuestroom</servlet-name>
        <jsp-file>/WEB-INF/admin/admin_guestrooms.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminGuestroom</servlet-name>
        <url-pattern>/admin/admin_guestrooms</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminHostel</servlet-name>
        <jsp-file>/WEB-INF/admin/admin_hostels.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>AdminHostel</servlet-name>
        <url-pattern>/admin/admin_hostels</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminUsers</servlet-name>
        <jsp-file>/WEB-INF/admin/admin_users.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminUsers</servlet-name>
        <url-pattern>/admin/admin_users</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminBookings</servlet-name>
        <jsp-file>/WEB-INF/admin/admin_user_bookings.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminBookings</servlet-name>
        <url-pattern>/admin/admin_user_bookings</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserBookings</servlet-name>
        <jsp-file>/WEB-INF/user_account/my_bookings.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserBookings</servlet-name>
        <url-pattern>/bookings</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserSettings</servlet-name>
        <jsp-file>/WEB-INF/user_account/user_edit_sittings.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserSettings</servlet-name>
        <url-pattern>/settings</url-pattern>
    </servlet-mapping>

    <listener>
        <listener-class>by.epam.project.hostel.controller.ServiceFactoryInitializer</listener-class>
    </listener>

    <filter>
        <filter-name>CheckRole</filter-name>
        <filter-class>by.epam.project.hostel.controller.filter.CheckRoleFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>CheckRole</filter-name>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>

</web-app>